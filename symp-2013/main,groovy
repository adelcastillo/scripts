import com.liferay.portal.kernel.scripting.ScriptingUtil;

String baseURL = "https://raw.github.com/dsanz/scripts/cache/symp-2013/"

String scriptBuilder = new URL(baseURL + "ScriptBuilder.groovy").text
String clusterMonitorCacheListener = new URL(baseURL + "ClusterMonitorCacheListener.groovy").text
String clusterMonitor = new URL(baseURL + "ClusterMonitor.groovy").text

ScriptingUtil.exec(null, null, "groovy", scriptBuilder + "\n" + clusterMonitorCacheListener +"\n" + clusterMonitor);